{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "jsx": "react-jsx",
      "strict": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@main/*": ["src/main/*"],
        "@renderer/*": ["src/renderer/*"],
        "@shared/*": ["src/shared/*"],
        "@database/*": ["src/database/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }